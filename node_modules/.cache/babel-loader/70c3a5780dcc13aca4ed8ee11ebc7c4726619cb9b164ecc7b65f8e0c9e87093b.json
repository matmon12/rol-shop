{"ast":null,"code":"import { Pagination, Navigation } from \"swiper/modules\";\nimport { Swiper, SwiperSlide, useSwiper } from \"swiper/vue\";\nimport \"swiper/css\";\nimport \"swiper/css/pagination\";\nimport \"swiper/css/navigation\";\nimport { ref } from \"vue\";\nexport default {\n  components: {\n    Swiper,\n    SwiperSlide\n  },\n  props: {\n    slides: Array\n  },\n  data() {\n    return {\n      slidesCount: 4\n    };\n  },\n  methods: {},\n  setup() {\n    const prev = ref(null);\n    const next = ref(null);\n    const pagination = ref(null);\n    return {\n      modules: [Pagination, Navigation],\n      prev,\n      next,\n      pagination\n    };\n  }\n};","map":{"version":3,"names":["Pagination","Navigation","Swiper","SwiperSlide","useSwiper","ref","components","props","slides","Array","data","slidesCount","methods","setup","prev","next","pagination","modules"],"sources":["C:\\gitPages\\rol-shop\\src\\components\\SliderProduct.vue"],"sourcesContent":["<template>\r\n  <div class=\"slider slider-product\">\r\n    <div class=\"container\">\r\n      <div class=\"slider__inner\">\r\n        <div class=\"swiper-object\">\r\n          <swiper\r\n            class=\"slider-box\"\r\n            :modules=\"modules\"\r\n            :pagination=\"{\r\n              el: pagination,\r\n              clickable: true,\r\n            }\"\r\n            :slides-per-view=\"1\"\r\n            :space-between=\"40\"\r\n            :navigation=\"{\r\n              prevEl: prev,\r\n              nextEl: next,\r\n            }\"\r\n          >\r\n            <swiper-slide v-for=\"item in slides\" :key=\"item.id\" class=\"slider-slide\">\r\n              <div class=\"slider-slide__wrapper\">\r\n                <div class=\"slider-slide__content\">\r\n                  <h1 class=\"slider-slide__title\">\r\n                    {{ item.title }}\r\n                  </h1>\r\n                  <p class=\"slider-slide__text\">{{ item.composition }}</p>\r\n                  <div class=